@model IEnumerable<ProductAPI.Models.Product>

<p>
    @Html.ActionLink("Create New", "Create", "Home", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Units_On_Hand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Units_On_Hand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Product_Number }) |
            @Html.ActionLink("Details", "Details", new { id=item.Product_Number }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Product_Number })
        </td>
    </tr>
}

</table>
